def sum_distance(from_, to_):
    if from_ > to_:
        from_, to_= to_, from_
    return sum(range(from_, to_ + 1))
from_ = int(input('Введите первое число:'))
to_ = int(input('Введите второе число:'))
print("Сумма диапазона: ", sum_distance(from_, to_))

